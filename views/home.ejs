<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Roots&Routes - Stay with Locals</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        /* Styling for hover video effect */
        .stay-container {
            position: relative;
            width: 100%;
            overflow: hidden;
            border-radius: 10px;
        }

        .stay-image {
            width: 100%;
            height: auto;
            transition: opacity 0.3s ease;
        }

        .stay-video {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .stay-container:hover .stay-image {
            opacity: 0;
        }

        .stay-container:hover .stay-video {
            opacity: 1;
        }

        .stay-description {
            padding: 16px;
            background-color: white;
            border-radius: 0 0 10px 10px;
            text-align: center;
        }
    </style>
</head>

<body class="bg-gray-100">

    <!-- Navbar -->
    <header class="bg-green-600 text-white p-4">
        <div class="max-w-screen-xl mx-auto flex justify-between items-center">
            <div class="text-xl font-semibold">Roots&Routes</div>
            <nav>
                <ul class="flex space-x-6">
                    <li><a href="#home" class="hover:underline">Home</a></li>
                    <li><a href="#how-it-works" class="hover:underline">How It Works</a></li>
                    <li><a href="#book" class="hover:underline">Book a Stay</a></li>
                    <li><a href="#become-a-host" class="hover:underline">Become a Host</a></li>
                    <li><a href="#contact" class="hover:underline">Contact</a></li>
                    <li><a href="/user/signup" class="hover:underline">SignUp</a></li>

                </ul>
            </nav>
        </div>
    </header>

    <!-- Book a Stay Section -->
    <section id="book" class="bg-white py-16 px-4">
        <div class="max-w-screen-xl mx-auto text-center">
            <h2 class="text-3xl font-semibold mb-6">Book a Stay</h2>
            <p class="text-xl mb-8">Find unique stays hosted by locals in your dream destination.</p>

            <!-- Stays Grid (3 images per row, up to 10 stays) -->
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
                <% for (let i = 0; i < 9; i++) { %>
                    <div class="stay-container">
                        <!-- Image -->
                        <img src="https://via.placeholder.com/400x300" alt="Stay <%= i + 1 %>" class="stay-image">
                        <!-- Video (will show on hover) -->
                        <video class="stay-video" muted loop>
                            <source src="https://via.placeholder.com/400x300/video.mp4" type="video/mp4">
                            Your browser does not support the video tag.
                        </video>
                        <div class="stay-description">
                            <h3 class="text-lg font-semibold text-gray-800">Stay <%= i + 1 %></h3>
                            <p class="text-sm text-gray-600">Location: Place <%= i + 1 %></p>
                            <p class="text-sm text-gray-600">Host: John Doe</p>
                            <button class="bg-green-600 text-white px-4 py-2 mt-4 rounded-lg">Book Now</button>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer id="contact" class="bg-gray-800 text-white py-8">
        <div class="max-w-screen-xl mx-auto text-center">
            <p>&copy; 2025 Roots&Routes. All rights reserved.</p>
            <p class="mt-4">Follow us on social media:</p>
            <div class="flex justify-center space-x-6 mt-4">
                <a href="#" class="text-white">Facebook</a>
                <a href="#" class="text-white">Instagram</a>
                <a href="#" class="text-white">Twitter</a>
            </div>
        </div>
    </footer>

</body>

</html>
