<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
    <title>Roots&Routes - Stay with Locals</title>
</head>

<body class="bg-gray-100">

    <!-- Navbar -->
    <%- include('./partials/navbar') %>

    <!-- Book a Stay Section -->
    <section id="book" class="bg-white py-16 px-4">
        <div class="container mx-auto text-center">
            <h2 class="text-3xl font-semibold mb-6">Book a Stay</h2>
            <p class="text-xl mb-8">Find unique stays hosted by locals in your dream destination.</p>

            <!-- Stays Grid using Bootstrap's Grid System -->
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
                <% for (let i=0; i < 9; i++) { %>
                    <div class="col">
                        <div class="stay-container bg-light rounded shadow">
                            <!-- Image -->
                            <img src="https://via.placeholder.com/400x300" alt="Stay <%= i + 1 %>" class="stay-image img-fluid rounded-top">
                            <!-- Video (will show on hover) -->
                            <video class="stay-video" muted loop>
                                <source src="https://via.placeholder.com/400x300/video.mp4" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>
                            <div class="stay-description p-4">
                                <h3 class="text-lg font-semibold text-gray-800">Stay <%= i + 1 %></h3>
                                <p class="text-sm text-gray-600">Location: Place <%= i + 1 %></p>
                                <p class="text-sm text-gray-600">Host: John Doe</p>
                                <button class="btn btn-success mt-4">Book Now</button>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer id="contact" class="bg-dark text-white py-8">
        <div class="container text-center">
            <p>&copy; 2025 Roots&Routes. All rights reserved.</p>
            <p class="mt-4">Follow us on social media:</p>
            <div class="d-flex justify-content-center space-x-3 mt-4">
                <a href="#" class="text-white">Facebook</a>
                <a href="#" class="text-white">Instagram</a>
                <a href="#" class="text-white">Twitter</a>
            </div>
        </div>
    </footer>

    <%- include('./partials/body') %>

</body>

</html>
